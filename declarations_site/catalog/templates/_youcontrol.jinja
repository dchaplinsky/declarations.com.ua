            <div class="youcontrol-tooltip__contents">
                <a href="#" title="{{ _("Відкрити досьє у YouControl") }}">
                    {{ _("Відкрити досьє у YouControl") }}
                </a>
            </div>
        </div>
    {% endif %}
{% endmacro %}