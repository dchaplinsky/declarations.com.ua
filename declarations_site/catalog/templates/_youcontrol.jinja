            <span class="youcontrol__dossier-title--mobile">{{ _("Досьє компанії від YouControl") }}</span>
            {{ icon_external() }}
        </a>
    {% elif option == 'b' %}
        <a href="#" class="search-card__item-dossier youcontrol__dossier youcontrol__dossier--option-b">
            <span class="youcontrol__dossier-title">{{ _("Досьє від YouControl") }}</span>
            <span class="youcontrol__dossier-title--mobile">{{ _("Досьє компанії від YouControl") }}</span>
            {{ icon_external() }}
        </a>
    {% elif option == 'c' %}
        <a href="#" class="action-icon youcontrol__dossier youcontrol__dossier--option-c">
            {{ icon_external('youcontrol__check-person-icon') }}
            <span class="action-icon__tooltip">
                <span class="action-icon__tooltip-text">
                    {{ _("Досьє від YouControl") }}
                </span>
            </span>
        </a>
    {% elif option == 'd' %}
        <!-- <a class="youcontrol-tooltip__trigger youcontrol__dossier youcontrol__dossier--option-d"
            data-tooltip-content="#youcontrol-tooltip__contents--{{ count }}">
            {{ icon_external('youcontrol__check-person-icon') }}
        </a> -->
