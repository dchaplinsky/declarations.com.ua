{% if step_data and not step_data['empty'] %}
    <div class="table-responsive">
        <table class="table table-striped table-bordered card-table border corner-round dataTable">
            <thead>
                <tr>
                    <th class="doc-num-row-col">№</th>
                    <th>{{ _("Загальна інформація") }}</th>
                    <th>{{ _("Опис об'єкта права") }}</th>
                    <th>{{ _("Вартість на дату набуття") }}</th>
                    <th>{{ _('Інформація про джерело') }}</th>
                </tr>
            </thead>
            <tbody>
            {% for item in step_data %}
                {% set data_item = step_data[item] %}
                <tr>
                    <td>{# № #}
                        {{ loop.index }}
                    </td>
                    <td>
                        <div class="row mb-2 mr-1">
                            <div class="col-12">
                                <span class="color-1">{{ _("Вид об'єкта: ") }}</span>
                                {% if data_item.objectType %}
                                    <span>{{ display_val(data_item.objectType) }}</span>
                                {% endif %}
                            </div>
                            {% if data_item.otherObjectType %}
                                <div class="col-12">
                                    <span class="color-1">{{ _('otherObjectType_step10') }}</span>
                                    <span>{{ display_val(data_item.otherObjectType) }}</span>
                                </div>
                            {% endif %}
                        </div>
                        <div class="row mb-2 mr-1">
                            <div class="col-12">
                                <span class="color-1">{{ _("Дата набуття права: ") }}</span>
                                {% if data_item.owningDate %}
                                    <span>{{ display_val(data_item.owningDate) }}</span>
                                {% endif %}
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="row mb-2 mr-1">
                            <div class="col-12">
                                {% if data_item.descriptionObject %}
                                    <span>{{ display_val(data_item.descriptionObject) }}</span>
                                {% endif %}
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="row mb-2 mr-1">
                            <div class="col-12">
                                {% if data_item.costDateOrigin %}
                                    <span>{{ display_val(data_item.costDateOrigin) }}</span>
                                {% endif %}
                            </div>
                        </div>
                    </td>
                    <td>
                        {# {% include 'cf_steps/_sources.jinja' with context %} #}
                        {% include 'steps/_rights.jinja' with context %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    {{ _("У суб'єкта декларування чи членів його сім'ї відсутні об'єкти для декларування в цьому розділі.") }}
{% endif %}