{% for source in data_item.sources %}
    <div class="row mb-2 mr-1">
        {% if source.sourceType %}
            <div class="col-12">
                <span class="color-1">{{ _('Джерело: ') }}</span>
                <span>{{ display_val(source.sourceType) }}</span>
            </div>
        {% endif %}
        {% if source.ua_lastname %}
            <div class="col-12">
                <span class="color-1">{{ _('Прізвище: ') }}</span>
                <span>{{ display_val(source.ua_lastname) }}</span>
            </div>
        {% endif %}
        {% if source.ua_firstname %}
            <div class="col-12">
                <span class="color-1">{{ _("Ім'я: ") }}</span>
                <span>{{ display_val(source.ua_firstname) }}</span>
            </div>
        {% endif %}
        {% if source.ua_middlename %}
            <div class="col-12">
                <span class="color-1">{{ _('По батькові (за наявності): ') }}</span>
                <span>{{ display_val(source.ua_middlename) }}</span>
            </div>
        {% endif %}
        {% if source.ua_birthday %}
            <div class="col-12">
                <span class="color-1">{{ _('Дата народження: ') }}</span>
                <span>{{ display_val(source.ua_birthday) }}</span>
            </div>
        {% endif %}
        {% if source.ua_company_name %}
            <div class="col-12">
                <span class="color-1">{{ _('Найменування: ') }}</span>
                <span>{{ display_val(source.ua_company_name) }}</span>
            </div>
        {% endif %}
        {% if source.ua_company_code %}
            <div class="col-12">
                <span class="color-1">{{ _('Код в Єдиному державному реєстрі юридичних осіб, фізичних осіб – підприємців та громадських формувань: ') }}</span>
                <span>{{ display_val(source.ua_company_code) }}</span>
            </div>
        {% endif %}
        {% if source.ua_taxNumber %}
            <div class="col-12">
                <span class="color-1">{{ _('Податковий номер: ') }}</span>
                <span>{{ display_val(source.ua_taxNumber) }}</span>
            </div>
        {% endif %}
        {% if source.ua_regAddressFull %}
            <div class="col-12">
                <span class="color-1">{{ _("Зареєстроване місце проживання: ") }}</span>
                <span>{{ display_val(source.ua_regAddressFull) }}</span>
            </div>
        {% endif %}
        {% if source.ua_sameRegLivingAddress == '1' or source.ua_livingAddressFull %}
            <div class="col-12">
                <span class="color-1">{{ _("Місце фактичного проживання: ") }}</span>
                {% if source.ua_sameRegLivingAddress == '1' %}
                    <span>{{ _('збігається з зареєстрованим місцем проживання') }}</span>
                {% else %}
                    <span>{{ display_val(source.ua_livingAddressFull) }}</span>
                {% endif%}
            </div>
        {% endif %}

        {% if source.eng_fullname %}
            <div class="col-12">
                <span class="color-1">{{ _("Повне ім'я (англійською): ") }}</span>
                <span>{{ display_val(source.eng_fullname) }}</span>
            </div>
        {% endif %}
        {% if source.ukr_fullname %}
            <div class="col-12">
                <span class="color-1">{{ _("Повне ім'я (українською): ") }}</span>
                <span>{{ display_val(source.ukr_fullname) }}</span>
            </div>
        {% endif %}
        {% if source.eng_birthday %}
            <div class="col-12">
                <span class="color-1">{{ _("Дата народження: ") }}</span>
                <span>{{ display_val(source.eng_birthday) }}</span>
            </div>
        {% endif %}
        {% if source.eng_taxNumber %}
            <div class="col-12">
                <span class="color-1">{{ _("Ідентифікаційний номер: ") }}</span>
                <span>{{ display_val(source.eng_taxNumber) }}</span>
            </div>
        {% endif %}
        {% if source.eng_regAddress %}
            <div class="col-12">
                <span class="color-1">{{ _("Місце проживання (англійською): ") }}</span>
                <span>{{ display_val(source.eng_regAddress) }}</span>
            </div>
        {% endif %}
        {% if source.ukr_actualAddress %}
            <div class="col-12">
                <span class="color-1">{{ _("Місце проживання (українською): ") }}</span>
                <span>{{ display_val(source.ukr_actualAddress) }}</span>
            </div>
        {% endif %}

        {% if source.eng_company_name %}
            <div class="col-12">
                <span class="color-1">{{ _('Найменування (англійською): ') }}</span>
                <span>{{ display_val(source.eng_company_name) }}</span>
            </div>
        {% endif %}
        {% if source.ukr_company_name %}
            <div class="col-12">
                <span class="color-1">{{ _('Найменування (українською): ') }}</span>
                <span>{{ display_val(source.ukr_company_name) }}</span>
            </div>
        {% endif %}
        {% if source.eng_company_code %}
            <div class="col-12">
                <span class="color-1">{{ _('Ідентифікаційний код: ') }}</span>
                <span>{{ display_val(source.eng_company_code) }}</span>
            </div>
        {% endif %}
        {% if source.eng_company_address %}
            <div class="col-12">
                <span class="color-1">{{ _('Місцезнаходження (англійською): ') }}</span>
                <span>{{ display_val(source.eng_company_address) }}</span>
            </div>
        {% endif %}
        {% if source.ukr_company_address %}
            <div class="col-12">
                <span class="color-1">{{ _('Місцезнаходження (українською): ') }}</span>
                <span>{{ display_val(source.ukr_company_address) }}</span>
            </div>
        {% endif %}
    </div>
{% endfor %}