{% if step_data and not step_data['empty'] %}
    <div class="table-responsive">
        <table class="table table-striped table-bordered card-table border corner-round dataTable">
            <thead>
                <tr>
                    <th class="doc-num-row-col">№</th>
                    <th>{{ _("Загальна інформація") }}</th>
                    <th>{{ _("Місцезнаходження об'єкта") }}</th>
                    <th>{{ _('table_header_step3_costDate') }}</th>
                    <th>{{ _("Вартість за останньою грошовою оцінкою") }}</th>
                    <th>{{ _('Інформація про джерело') }}</th>
                </tr>
            </thead>
            <tbody>
            {% for item in step_data %}
                {% set data_item = step_data[item] %}
                <tr>
                    <td>{# № #}
                        {{ loop.index }}
                    </td>
                    <td>
                        <div class="row mb-2 mr-1">
                            <div class="col-12">
                                <span class="color-1">{{ _("Вид об'єкта: ") }}</span>
                                <span>{{ display_val(data_item.objectType) }}</span>
                            </div>
                            {% if data_item.otherObjectType %}
                                <div class="col-12">
                                    <span class="color-1">{{ _("Інший вид об'єкта: ") }}</span>
                                    <span>{{ display_val(data_item.otherObjectType) }}</span>
                                </div>
                            {% endif %}
                            <div class="col-12">
                                <span class="color-1">{{ _("Дата набуття права: ") }}</span>
                                <span>{{ display_val(data_item.owningDate) }}</span>
                            </div>
                            <div class="col-12">
                                <span class="color-1">{{ _("Загальна площа (м<sup><small>2</small></sup>): ") }}</span>
                                <span>{{ display_val(data_item.totalArea) }}</span>
                            </div>
                            <div class="col-12">
                                {% if data_item.objectType and data_item.objectType == _("Земельна ділянка") %}
                                    <span class="color-1">{{ _("Кадастровий номер: ") }}</span>
                                {% else %}
                                    <span class="color-1">{{ _("Реєстраційний номер: ") }}</span>
                                {% endif %}
                                <span>{{ display_val(data_item.regNumber) }}</span>
                            </div>
                        </div>
                    </td>
                    <td>
                        {% if not data_item.country or data_item.country|string != "1" %}
                            <div class="row mb-2 mr-1">
                                <div class="col-12">
                                    <span class="color-1">{{ _("Країна: ") }}</span>
                                    <span>{{ declaration.get_country(data_item.country) }}</span>
                                </div>
                                <div class="col-12">
                                    <span class="color-1">{{ _("Поштовий індекс: ") }}</span>
                                    <span>{{ display_val(data_item.ua_postCode) }}</span>
                                </div>
                                <div class="col-12">
                                    <span class="color-1">{{ _("Населений пункт: ") }}</span>
                                    <span>{{ display_val(data_item.ua_cityType) }}</span>
                                </div>
                                {% if data_item.ua_streetType %}
                                    <div class="col-12">
                                        <span class="color-1">{{ _("Тип вулиці: ") }}</span>
                                        <span>{{ display_val(data_item.ua_streetType) }}</span>
                                    </div>
                                {% endif %}
                                {% if data_item.ua_street %}
                                    <div class="col-12">
                                        <span class="color-1">{{ _("Вулиця: ") }}</span>
                                        <span>{{ display_val(data_item.ua_street) }}</span>
                                    </div>
                                {% endif %}
                                {% if data_item.ua_houseNum %}
                                    <div class="col-12">
                                        <span class="color-1">{{ _("Номер будинку: ") }}</span>
                                        <span>{{ display_val(data_item.ua_houseNum) }}</span>
                                    </div>
                                {% endif %}
                                {% if data_item.ua_housePartNum %}
                                    <div class="col-12">
                                        <span class="color-1">{{ _("Номер корпусу: ") }}</span>
                                        <span>{{ display_val(data_item.ua_housePartNum) }}</span>
                                    </div>
                                {% endif %}
                                {% if data_item.ua_apartmentsNum %}
                                    <div class="col-12">
                                        <span class="color-1">{{ _("Номер квартири: ") }}</span>
                                        <span>{{ display_val(data_item.ua_apartmentsNum) }}</span>
                                    </div>
                                {% endif %}
                            </div>
                        {% else %}
                            <div class="row mb-2 mr-1">
                                <div class="col-12">
                                    <span class="color-1">{{ _("Країна: ") }}</span>
                                    <span>{{ declaration.get_country(data_item.country) }}</span>
                                </div>
                                <div class="col-12">
                                    <span class="color-1">{{ _("Поштовий індекс: ") }}</span>
                                    <span>{{ display_val(data_item.postCode) }}</span>
                                </div>
                                <div class="col-12">
                                    <span class="color-1">{{ _("Адреса (англійською): ") }}</span>
                                    <span>{{ display_val(data_item.loc_engLivingAddress) }}</span>
                                </div>
                                <div class="col-12">
                                    <span class="color-1">{{ _("Адреса (українською): ") }}</span>
                                    <span>{{ display_val(data_item.loc_ukrLivingAddress) }}</span>
                                </div>
                            </div>
                        {% endif%}
                    </td>
                    <td>
                        {{ display_val(data_item.costDate) }}
                    </td>
                    <td>
                        {{ display_val(data_item.costAssessment) }}
                    </td>
                    <td>
                        {% include 'steps/_rights.jinja' with context %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    {{ _("У суб'єкта декларування чи членів його сім'ї відсутні об'єкти для декларування в цьому розділі.") }}
{% endif %}