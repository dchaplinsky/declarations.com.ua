{% if step_data %}
    <div class="table-responsive">
        <table class="table table-striped table-bordered card-table border corner-round dataTable">
            <thead>
            <tr>
                <th class="doc-num-row-col">{{ _('№') }}</th>
                <th>{{ _( 'table_header_common_info' ) }}</th>
                <th>{{ _( 'table_header_step8_cost' ) }}</th>
                <th>{{ _( 'table_header_step8_is_transferred' ) }}</th>
                <th>{{ _( 'table_header_step8_cost_percent' ) }}</th>
                <th>{{ _( 'table_header_step8_rights' ) }}</th>
            </tr>
            </thead>
            <tbody>
                {% for item in step_data %}
                    {% set data_item = step_data[item] %}
                    <tr>
                        <td class="doc-num-row-col">{# № #}
                            {{ loop.index }}
                        </td>
                        <td>{# ЗАГАЛЬНА ІНФОРМАЦІЯ #}
                            <div class="row mb-2 mr-1">
                            {% set country = data_item.country | int %}
                            {% if country > 1 %}
                                <div class="col-12">
                                    <span class="color-1">{{ _('en_name') }}</span>
                                    <span>{{ display_val(data_item.en_name) }}</span>
                                </div>
                                <div class="col-12">
                                    <span class="color-1">{{ _('en_corporate_rights_company_code') }}</span>
                                    <span>{{ display_val(data_item.en_corporate_rights_company_code) }}</span>
                                </div>
                            {% else%}
                                <div class="col-12">
                                    <span class="color-1">{{ _('corporate_rights_company_code') }}</span>
                                    <span>{{ display_val(data_item.corporate_rights_company_code) }}</span>
                                </div>
                                <div class="col-12">
                                    <span class="color-1">{{ _( 'legalForm' ) }}</span>
                                    <span>{{ display_val(data_item.legalForm) }}</span>
                                </div>
                                <div class="col-12">
                                    <span class="color-1">{{ _( 'corporate_rights_country' ) }}</span>
                                    <span>{{ display_val(data_item.country) }}</span>{# todo: check Dima #}
                                </div>
                                <div class="col-12">
                                    <span class="color-1">{{ _( 'owningDate_step8' ) }}</span>
                                    <span>{{ display_val(data_item.owningDate) }}</span>
                                </div>
                            {% endif %}
                            </div>
                        </td>
                        <td>{# ВАРТІСТЬ У ГРОШОВОМУ ВИРАЖЕННІ #}
                            <div class="row mb-2 mr-1">
                                <div class="col-12">
                                    <span>{{ display_val(data_item.cost) }}</span>
                                </div>
                            </div>
                        </td>
                        <td>{# todo: check if we need display this column #}
                            <div class="row mb-2 mr-1">
                                <div class="col-12">
                                    <span>{{ display_val(data_item.is_transferred) }}</span>
                                </div>
                            </div>
                        </td>
                        <td>{# % ВІД ЗАГАЛЬНОГО КАПІТАЛУ #}
                            <div class="row mb-2 mr-1">
                                <div class="col-12">
                                    <span>{{ display_val(data_item.cost_percent) }}</span>
                                </div>
                            </div>
                        </td>
                        <td>{# ІНФОРМАЦІЯ ПРО ПРАВА НА ОБ'ЄКТ #}
                            {% include 'steps/_rights.jinja' with context %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endif %}