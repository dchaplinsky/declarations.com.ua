{% if step_data %}
    <div class="table-responsive">
        <table class="table table-striped table-bordered card-table border corner-round dataTable">
            <thead>
            <tr>
                <th class="doc-num-row-col">№</th>
                <th>{{ _('table_header_subjectRelation') }}</th>
                <th>{{ _('table_header_person_info') }}</th>
                <th>{{ _('table_header_citizenship') }}</th>
                <th>{{ _('table_header_taxNumber') }}</th>
                <th>{{ _('table_header_passport') }}</th>
                <th>{{ _('table_header_unzr') }}</th>
                <th>{{ _('table_header_actual_living_place') }}</th>
            </tr>
            </thead>
            <tbody>
            {% for person in step_data %}
                {% set related_person = step_data[person] %}
                <tr>
                    <td>{# № #}
                        {{ loop.index }}
                    </td>
                    <td>{# Зв'язок із суб'єктом декларування #}
                        {{ display_val(related_person.subjectRelation) }}
                    </td>
                    <td>{# Прізвище, ім'я, по батькові #}
                        {% if related_person.citizenship == '1' %}
                            <div class="row mb-2 mr-1">
                                <div class="col-12">
                                    <span class="color-1">{{ _('lastname') }}</span>
                                    <span>{{ display_val(related_person.lastname) }}</span>
                                </div>
                                <div class="col-12">
                                    <span class="color-1">{{ _('firstname') }}</span>
                                    <span>{{ display_val(related_person.firstname) }}</span>
                                </div>
                                {% if related_person.middlename %}
                                    <div class="col-12">
                                        <span class="color-1">{{ _('middlename') }}</span>
                                        <span>{{ display_val(related_person.middlename) }}</span>
                                    </div>
                                {% endif %}
                            </div>
                            {% if related_person.changedName == 1 %}
                                <div class="row mb-2 mr-1">
                                    <div class="col-12">
                                        <span class="color-1">{{ _('lastname') }}</span>
                                        <span>{{ display_val(related_person.previous_lastname) }}</span>
                                    </div>
                                    <div class="col-12">
                                        <span class="color-1">{{ _('firstname') }}</span>
                                        <span>{{ display_val(related_person.previous_firstname) }}</span>
                                    </div>
                                    {% if related_person.previous_middlename %}
                                        <div class="col-12">
                                            <span class="color-1">{{ _('previous_middlename') }}</span>
                                            <span>{{ display_val(related_person.previous_middlename) }}</span>
                                        </div>
                                    {% endif%}
                                </div>
                            {% endif%}{# if related_person.changedName == 1 #}
                        {% else %}{# if related_person.citizenship != '1' #}
                            <div class="row mb-2 mr-1">
                                <div class="col-12">
                                    <span class="color-1">{{ _('eng_full_name') }}</span>
                                    <span>{{ display_val(related_person.eng_full_name) }}</span>
                                </div>
                                <div class="col-12">
                                    <span class="color-1">{{ _('ukr_full_name') }}</span>
                                    <span>{{ display_val(related_person.ukr_full_name) }}</span>
                                </div>
                            </div>
                            {% if related_person.changedName == 1 %}
                                <div class="row mb-2 mr-1">
                                    <div class="col-12">
                                        <span class="color-1">{{ _('previous_eng_full_name') }}</span>
                                        <span>{{ display_val(related_person.previous_eng_full_name) }}</span>
                                    </div>
                                    <div class="col-12">
                                        <span class="color-1">{{ _('pevious_ukr_full_name') }}</span>
                                        <span>{{ display_val(related_person.pevious_ukr_full_name) }}</span>
                                    </div>
                                </div>
                            {% endif%}{# if related_person.changedName == 1 #}
                        {% endif %}{# if related_person.citizenship == '1' #}
                        <div class="row mb-2 mr-1">
                            <div class="col-12">
                                <span class="color-1">{{ _('birthday') }}</span>
                                <span>{{ display_val(related_person.birthday) }}</span>
                            </div>
                        </div>
                    </td>
                    <td>{# Громадянство #}
                        {% if related_person.citizenship %}
                            {{ display_val(related_person.citizenship) }}{# todo:Dima match number & country name #}
                        {% else %}
                            {{ 'Без громадянства' }}
                        {% endif %}
                    </td>
                    <td>{# Податковий номер #}
                        <div class="row mb-2 mr-1">
                            <div class="col-12">
                                <span>
                                    {% if related_person.citizenship == 1 %}
                                        {{ display_val(related_person.taxNumber) }}
                                    {% else %}
                                        {{ display_val(related_person.eng_identification_code) }}
                                    {% endif %}
                                </span>
                            </div>
                        </div>
                    </td>
                    <td>{# passport #}
                        {% if related_person.citizenship == 1 %}
                            <div class="row mb-2 mr-1">
                                <div class="col-12">
                                    <span>{{ display_val(related_person.passport) }}</span>
                                </div>
                            </div>
                        {% endif %}
                    </td>
                    <td>
                        {% if related_person.citizenship == 1 %}
                            <div class="row mb-2 mr-1">
                                <div class="col-12">
                                    <span>{{ display_val(related_person.unzr) }}</span>
                                </div>
                            </div>
                        {% endif %}
                    </td>{# unzr #}
                    <td>{# actual_living_place #}
                        {% if related_person.citizenship == 1 %}
                            <div class="row mb-2 mr-1">
                                <div class="col-12">
                                    <span class="color-1">{{ _('country') }}</span>
                                    <span>{{ display_val(related_person.country) }}{# todo: Dima #}</span>
                                </div>
                                {% if related_person.postCode %}
                                    <div class="col-12">
                                        <span class="color-1">{{ _('ua_postCode') }}</span>
                                        <span>{{ display_val(related_person.postCode) }}</span>
                                    </div>
                                {% endif %}
                                <div class="col-12">
                                    <span class="color-1">{{ _('ua_cityType') }}</span>
                                    <span>{{ display_val(related_person.ua_cityType) }}</span>
                                </div>
                                {% if related_person.streetType %}
                                    <div class="col-12">
                                        <span class="color-1">{{ _('streetType_v3') }}</span>
                                        <span>{{ display_val(related_person.streetType) }}</span>
                                    </div>
                                {% endif %}

                                {% if related_person.street %}
                                    <div class="col-12">
                                        <span class="color-1">{{ _('street_v3') }}</span>
                                        <span>{{ display_val(related_person.street) }}</span>
                                    </div>
                                {% endif %}

                                {% if related_person.ua_houseNum %}
                                    <div class="col-12">
                                        <span class="color-1">{{ _('ua_houseNum') }}</span>
                                        <span>{{ display_val(related_person.ua_houseNum) }}</span>
                                    </div>
                                {% endif %}

                                {% if related_person.housePartNum %}
                                    <div class="col-12">
                                        <span class="color-1">{{ _('ua_housePartNum') }}</span>
                                        <span>{{ display_val(related_person.housePartNum) }}</span>
                                    </div>
                                {% endif %}

                                {% if related_person.apartmentsNum %}
                                    <div class="col-12">
                                        <span class="color-1">{{ _('ua_apartmentsNum') }}</span>
                                        <span>{{ display_val(related_person.apartmentsNum) }}</span>
                                    </div>
                                {% endif %}
                            </div>
                        {% else %}
                            <div class="row mb-2 mr-1">
                                <div class="col-12">
                                    <span class="color-1">{{ _('eng_full_address') }}</span>
                                    <span>{{ display_val(related_person.eng_full_address) }}</span>
                                </div>
                                <div class="col-12">
                                    <span class="color-1">{{ _('ukr_full_address') }}</span>
                                    <span>{{ display_val(related_person.ukr_full_address) }}</span>
                                </div>
                            </div>
                        {% endif%}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endif %}