{% if not step_data['empty'] %}
    <div class="table-responsive">
        <table class="table table-striped table-bordered card-table border corner-round dataTable">
            <thead>
            <tr>
                <th class="doc-num-row-col">{{ _('№') }}</th>
                <th>{{ _( 'table_header_org_objectName' ) }}</th>
                <th>{{ _( 'table_header_org_objectType' ) }}</th>
                <th>{{ _( 'table_header_org_reestrCode' ) }}</th>
            </tr>
            </thead>
            <tbody>
            {% for item in step_data %}
                {% set data_item = step_data[item] %}
                {% for organization in data_item  %}
                    {% set organization_item = data_item[organization] %}
                    <tr>
                        <td class="doc-num-row-col">{# № #}
                            {{ loop.index }}
                        </td>
                        <td>{# НАЙМЕНУВАННЯ ОРГАНІЗАЦІЇ #}
                            <div class="row mb-2 mr-1">
                                <div class="col-12">
                                    <span>{{ display_val(organization_item.objectName) }}</span>
                                </div>
                            </div>
                        </td>
                        <td>{# ОРГАНІЗАЦІЙНО-ПРАВОВА ФОРМА #}
                            <div class="row mb-2 mr-1">
                                <div class="col-12">
                                    <span>{{ display_val(organization_item.objectType) }}</span>
                                </div>
                            </div>
                        </td>
                        <td>{# КОД В ЄДИНОМУ ДЕРЖАВНОМУ РЕЄСТРІ ЮРИДИЧНИХ ОСІБ, ФІЗИЧНИХ ОСІБ – ПІДПРИЄМЦІВ ТА ГРОМАДСЬКИХ ФОРМУВАНЬ #}
                            <div class="row mb-2 mr-1">
                                <div class="col-12">
                                    <span>{{ display_val(organization_item.reestrCode) }}</span>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    {{ step_data['empty'] }}
{% endif %}

