{% if step_data and not step_data['empty'] %}
    <div class="table-responsive">
        <table class="table table-striped table-bordered card-table border corner-round dataTable">
            <thead>
            <tr>
                <th class="doc-num-row-col">{{ _('№') }}</th>
                <th>{{ _("Установа, в якій відкриті такі рахунки або до якої зроблені відповідні внески, або фізична особа") }}</th>
                <th>{{ _("Вид активу") }}</th>
                <th>{{ _("Розмір активу") }}</th>
                <th>{{ _("Інформація щодо права на об'єкт") }}</th>
            </tr>
            </thead>
            <tbody>
            {% for item in step_data %}
                {% set data_item = step_data[item] %}
                <tr>
                    <td class="doc-num-row-col">{# № #}
                        {{ loop.index }}
                    </td>
                    <td>{# УСТАНОВА, В ЯКІЙ ВІДКРИТІ ТАКІ РАХУНКИ АБО ДО ЯКОЇ ЗРОБЛЕНІ ВІДПОВІДНІ ВНЕСКИ #}
                        <div class="row mb-2 mr-1">
                            <div class="col-12">
                                <span>{{ display_val(data_item.organization) }}</span>
                            </div>

                            {% if data_item.organization_type1 == 'Юридична особа, зареєстрована за кордоном' %}
                                <div class="col-12">
                                    <span>{{ display_val(data_item.organization_type) }}</span>
                                </div>
                                <div class="col-12">
                                    <span class="color-1">{{ _("Найменування (англійською): ") }}</span>
                                    <span>{{ display_val(data_item.organization_eng_company_name) }}</span>
                                </div>
                                <div class="col-12">
                                    <span class="color-1">{{ _("Найменування (українською): ") }}</span>
                                    <span>{{ display_val(data_item.organization_ukr_company_name) }}</span>
                                </div>
                                <div class="col-12">
                                    <span class="color-1">{{ _("Ідентифікаційний код: ") }}</span>
                                    <span>{{ display_val(data_item.organization_eng_company_code) }}</span>
                                </div>
                                <div class="col-12">
                                    <span class="color-1">{{ _("Місцезнаходження (англійською): ") }}</span>
                                    <span>{{ display_val(data_item.organization_eng_company_address) }}</span>
                                </div>
                                <div class="col-12">
                                    <span class="color-1">{{ _("Місцезнаходження (українською): ") }}</span>
                                    <span>{{ display_val(data_item.organization_ukr_company_address) }}</span>
                                </div>
                            {% elif data_item.organization_type1 == 'Юридична особа, зареєстрована в Україні' %}
                                <div class="col-12">
                                    <span>{{ display_val(data_item.organization_type1) }}</span>
                                </div>
                                <div class="col-12">
                                    <span class="color-1">{{ _("Найменування: ") }}</span>
                                    <span>{{ display_val(data_item.organization_ua_company_name) }}</span>
                                </div>
                                <div class="col-12">
                                    <span class="color-1">{{ _("Код в Єдиному державному реєстрі юридичних осіб, фізичних осіб – підприємців та громадських формувань: ") }}</span>
                                    <span>{{ display_val(data_item.organization_ua_company_code) }}</span>
                                </div>
                            {% else %}
                                {% if data_item.organization_type2 == 'Громадянин України' %}
                                    <div class="col-12">
                                        <span>{{ data_item.organization_type2 }}</span>
                                    </div>
                                    <div class="col-12">
                                        <span class="color-1">{{ _("Прізвище: ") }}</span>
                                        <span>{{ display_val(data_item.debtor_ua_lastname) }}</span>
                                    </div>
                                    <div class="col-12">
                                        <span class="color-1">{{ _("Ім'я: ") }}</span>
                                        <span>{{ display_val(data_item.debtor_ua_firstname) }}</span>
                                    </div>
                                    <div class="col-12">
                                        <span class="color-1">{{ _("По батькові: ") }}</span>
                                        <span>{{ display_val(data_item.debtor_ua_middlename) }}</span>
                                    </div>
                                    <div class="col-12">
                                        <span class="color-1">{{ _("Дата народження: ") }}</span>
                                        <span>{{ display_val(data_item.debtor_ua_birthday) }}</span>
                                    </div>
                                    <div class="col-12">
                                        <span class="color-1">{{ _("Податковий номер: ") }}</span>
                                        <span>{{ display_val(data_item.debtor_ua_taxNumber) }}</span>
                                    </div>
                                    <div class="col-12">
                                        <span class="color-1">{{ _("Зареєстроване місце проживання: ") }}</span>
                                        <span>{{ display_val(data_item.debtor_ua_regAddress) }}</span>
                                    </div>
                                    {% if data_item.debtor_ua_actualAddress  %}
                                        <div class="col-12">
                                            <span class="color-1">{{ _("Місце фактичного проживання: ") }}</span>
                                            <span>{{ display_val(data_item.debtor_ua_actualAddress) }}</span>
                                        </div>
                                    {% endif %}
                                    {% if data_item.debtor_ua_sameRegLivingAddress %}
                                        <div class="col-12">
                                            <span class="color-1">{{ _("Місце фактичного проживання: ") }} </span>
                                            <span>{{ _("збігається з зареєстрованим місцем проживання") }}</span>
                                        </div>
                                    {% endif %}
                                {% elif data_item.organization_type2 == 'Іноземний громадянин' %}
                                    {# TODO: find and validate #}
                                    <div class="col-12">
                                        <span>{{ data_item.organization_type2 }}</span>
                                        {{ data_item.debtor_eng_fullname }}
                                    </div>
                                {% endif %}
                            {% endif %}
                        </div>
                        <div class="row mb-2 mr-1">
                            <div class="col-12">
                                <span>{{ display_val(data_item.person) }}</span>
                            </div>
                        </div>
                    </td>
                    <td>{# ВИД АКТИВУ #}
                        <div class="row mb-2 mr-1">
                            <div class="col-12">
                                <span>{{ display_val(data_item.objectType) }}</span>
                            </div>
                            <div class="col-12">
                                <span>{{ display_val(data_item.otherObjectType) }}</span>
                            </div>
                        </div>
                    </td>
                    <td>{# РОЗМІР АКТИВУ #}
                        <div class="row mb-2 mr-1">
                            <div class="col-12">
                                <span class="color-1">{{ _("Розмір: ") }}</span>
                                <span>{{ display_val(data_item.sizeAssets|amount_format) }}</span>
                            </div>
                            <div class="col-12">
                                <span class="color-1">{{ _("Валюта: ") }}</span>
                                <span>{{ display_val(data_item.assetsCurrency) }}</span>
                            </div>
                        </div>
                    </td>
                    <td>{# ІНФОРМАЦІЯ ЩОДО ПРАВА НА ОБ'ЄКТ #}
                        {% include 'steps/_rights.jinja' with context %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    {{ _("У суб'єкта декларування чи членів його сім'ї відсутні об'єкти для декларування в цьому розділі.") }}
{% endif %}