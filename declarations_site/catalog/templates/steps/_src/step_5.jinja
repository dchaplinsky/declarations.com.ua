{% if step_data and not step_data['empty'] %}
    <div class="table-responsive">
        <table class="table table-striped table-bordered card-table border corner-round dataTable">
            <thead>
            <tr>
                <th class="doc-num-row-col">{{ _('№') }}</th>
                <th>{{ _('table_header_common_info') }}</th>
                <th>{{ _('table_header_properties') }}</th>
                <th>{{ _('table_header_costDateUse_v3') }}</th>
                <th>{{ _('table_header_step5_rights') }}</th>
            </tr>
            </thead>
            <tbody>
            {% for item in step_data %}
                {% set data_item = step_data[item] %}
                <tr>
                    <td class="doc-num-row-col">{# № #}
                        {{ loop.index }}
                    </td>
                    <td>{# ЗАГАЛЬНА ІНФОРМАЦІЯ #}
                        <div class="row mb-2 mr-1">
                            <div class="col-12">
                                <span class="color-1">{{ _('objectType_step5') }}</span>
                                <span>{{ display_val(data_item.objectType) }}</span>
                            </div>
                            {% if data_item.otherObjectType %}
                                <div class="col-12">
                                    <span class="color-1">{{ _('otherObjectType_step5') }}</span>
                                    <span>{{ display_val(data_item.otherObjectType) }}</span>
                                </div>
                            {% endif %}
                            <div class="col-12">
                                <span class="color-1">{{ _('dateUse') }}</span>
                                <span>{{ display_val(data_item.dateUse) }}</span>
                            </div>
                        </div>
                    </td>
                    <td>{# ХАРАКТЕРИСТИКА #}
                        <div class="row mb-2 mr-1">
                            <div class="col-12">
                                <span class="color-1">{{ _('trademark') }}</span>
                                <span>{{ display_val(data_item.trademark) }}</span>
                            </div>
                            <div class="col-12">
                                <span class="color-1">{{ _('manufacturerName_v3') }}</span>
                                <span>{{ display_val(data_item.manufacturerName) }}</span>
                            </div>
                            <div class="col-12">
                                <span class="color-1">{{ _('propertyDescr') }}</span>
                                <span>{{ display_val(data_item.propertyDescr) }}</span>
                            </div>
                        </div>
                        <div class="row mb-2 mr-1">
                            {% if data_item.acqBeforeFD %}
                                <div class="col-12">
                                    <span>{{ _('acqBeforeFD_v3') }}</span>
                                </div>
                            {% endif %}
                        </div>
                    </td>
                    <td>{# ВАРТІСТЬ НА ДАТУ НАБУТТЯ У ВЛАСНІСТЬ, ВОЛОДІННЯ ЧИ КОРИСТУВАННЯ #}
                        <div class="row mb-2 mr-1">
                            <div class="col-12">
                                <span>{{ display_val(data_item.costDateUse) }}</span>
                            </div>
                        </div>
                    </td>
                    <td>{# ІНФОРМАЦІЯ ЩОДО ПРАВ НА МАЙНО #}
                        {% include 'steps/_rights.jinja' with context %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    {{ _("У суб'єкта декларування чи членів його сім'ї відсутні об'єкти для декларування в цьому розділі.") }}
{% endif %}
