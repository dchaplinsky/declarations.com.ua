{% if step_data and not step_data['empty'] %}
    <div class="table-responsive">
        <table class="table table-striped table-bordered card-table border corner-round dataTable">
            <thead>
            <tr>
                <th class="doc-num-row-col">{{ _('№') }}</th>
                <th>{{ _("Загальна інформація") }}</th>
                <th>{{ _("Інформація про фізичну або юридичну особу, яка має право розпоряджатися таким рахунком або має доступ до індивідуального банківського сейфу (комірки)") }}</th>
                <th>{{ _("Інформація про фізичну або юридичну особу, яка відкрила рахунок на ім’я суб’єкта декларування або членів його сім’ї") }}</th>
                <th>{{ _("Установа, в якій відкрито такі рахунки або зберігаються кошти чи інше майно") }}</th>
                <th>{{ _("Інформація про особу, якої стосується") }}</th>
            </tr>
            </thead>
            <tbody>
            {% for item in step_data %}
                {% set data_item = step_data[item] %}
                <tr>
                    <td class="doc-num-row-col">{# № #}
                        {{ loop.index }}
                    </td>
                    <td>
                        <div class="row mb-2 mr-1">
                            <div class="col-12">
                                <span class="color-1">{{ _("Найменування банку або іншої фінансової установи: ") }}</span>
                                <span>{{ display_val(data_item.bank_name) }}</span>
                            </div>
                            <div class="col-12">
                                <span class="color-1">{{ _("Тип рахунку: ") }}</span>
                                <span>{{ display_val(data_item.account_type) }}</span>
                            </div>
                            {% if data_item.other_account_type %}
                                <div class="col-12">
                                    <span class="color-1">{{ _( 'Інший тип рахунку: ' ) }}</span>
                                    <span>{{ display_val(data_item.other_account_type) }}</span>
                                </div>
                            {% endif %}
                            <div class="col-12">
                                <span class="color-1">{{ _("Номер рахунку: ") }}</span>
                                <span>{{ display_val(data_item.account_number) }}</span>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="row mb-2 mr-1">
                            {% if display_val(data_item.person_has_account).startswith("[") %}
                                <div class="col-12">
                                    <span>{{ display_val(data_item.person_has_account) }}</span>
                                </div>
                            {% else %}
                                {% include "steps/_account_access.jinja" with context %}
                            {% endif %}
                        </div>
                    </td>
                    <td>
                        <div class="row mb-2 mr-1">
                            {% if display_val(data_item.person_open_account).startswith("[") %}
                                <div class="col-12">
                                    <span>{{ display_val(data_item.person_open_account) }}</span>
                                </div>
                            {% else %}
                                {% include "steps/_account_opener.jinja" with context %}
                            {% endif %}
                        </div>
                    </td>
                    <td>
                        <div class="col-12">
                            <span>{{ display_val(data_item.establishment_type )}}</span>
                        </div>
                        {% if data_item.establishment_type == "Юридична особа, зареєстрована в Україні" %}
                            <div class="col-12">
                                <span class="color-1">{{ _("Найменування: ") }}</span>
                                <span>{{ display_val(data_item.establishment_ua_company_name )}}</span>
                            </div>
                            <div class="col-12">
                                <span class="color-1">{{ _("Код в Єдиному державному реєстрі юридичних осіб, фізичних осіб – підприємців та громадських формувань:") }}</span>
                                <span>{{ display_val(data_item.establishment_ua_company_code )}}</span>
                            </div>
                        {% elif data_item.establishment_type == "Юридична особа, зареєстрована за кордоном" %}
                            <div class="col-12">
                                <span class="color-1">{{ _("Найменування (англійською): " )}}</span>
                                <span>{{ display_val(data_item.establishment_eng_company_name) }}</span>
                            </div>
                            <div class="col-12">
                                <span class="color-1">{{ _("Найменування (українською): " )}}</span>
                                <span>{{ display_val(data_item.establishment_ukr_company_name) }}</span>
                            </div>
                            <div class="col-12">
                                <span class="color-1">{{ _("Ідентифікаційний код: " )}}</span>
                                <span>{{ display_val(data_item.establishment_eng_company_code) }}</span>
                            </div>
                        {% endif %}
                    </td>
                    <td>
                        {% include 'steps/_care.jinja' with context %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    {{ _("У суб'єкта декларування чи членів його сім'ї відсутні об'єкти для декларування в цьому розділі.") }}
{% endif %}