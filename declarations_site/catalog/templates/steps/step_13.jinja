{% if step_data and not step_data['empty'] %}
    <div class="table-responsive">
        <table class="table table-striped table-bordered card-table border corner-round dataTable">
            <thead>
            <tr>
                <th class="doc-num-row-col">{{ _('№') }}</th>
                <th>{{ _("Загальна інформація") }}</th>
                <th>{{ _("Особа, на користь якої виникло зобов'язання") }}</th>
                <th>{{ _("Розмір") }}</th>
                <th>{{ _("Інформація щодо поручителів та майнового забезпечення") }}</th>
                <th>{{_("Інформація про особу, якої стосується") }}</th>
            </tr>
            </thead>
            <tbody>
            {% for item in step_data %}
                {% set data_item = step_data[item] %}
                <tr>
                    <td class="doc-num-row-col">{# № #}
                        {{ loop.index }}
                    </td>
                    <td>{# ЗАГАЛЬНА ІНФОРМАЦІЯ #}
                        <div class="row mb-2 mr-1">
                            <div class="col-12">
                                <span class="color-1">{{ _("Вид зобов'язання: ") }}</span>
                                <span>{{ display_val(data_item.objectType) }}</span>
                            </div>
                            {% if data_item.otherObjectType %}
                                <div class="col-12">
                                    <span class="color-1">{{ _("Інший вид зобов'язання: ") }}</span>
                                    <span>{{ display_val(data_item.otherObjectType) }}</span>
                                </div>
                            {% endif %}
                            <div class="col-12">
                                <span class="color-1">{{ _("Дата виникнення: ") }}</span>
                                <span>{{ display_val(data_item.dateOrigin) }}</span>
                            </div>
                        </div>

                        {% if data_item.objectType == 'Отримані кредити' or data_item.objectType == 'Отримані позики' %}
                            <div class="row mb-2 mr-1">
                                <div class="col-12">
                                    <span class="color-1">{{ _("Залишок позики (кредиту) станом на кінець звітного періоду: ") }}</span>
                                    <span>{{ display_val(data_item.credit_rest)|amount_format }}</span>
                                </div>
                                <div class="col-12">
                                    <span class="color-1">{{ _("Розмір сплачених коштів у рахунок основної суми позики (кредиту): ") }}</span>
                                    <span>{{ display_val(data_item.credit_paid)|amount_format }}</span>
                                </div>
                                <div class="col-12">
                                    <span class="color-1">{{ _("Розмір сплачених відсотків за позикою (кредитом): ") }}</span>
                                    <span>{{ display_val(data_item.credit_percent_paid)|amount_format }}</span>
                                </div>
                            </div>
                        {% endif %}
                    </td>
                    <td>
                        <div class="row mb-2 mr-1">
                            {% include 'steps/_emitent.jinja' with context %}
                        </div>
                    </td>
                    <td>
                        <div class="row mb-2 mr-1">
                            <div class="col-12">
                                <span class="color-1">{{ _("Розмір: ") }}</span>
                                <span>{{ display_val(data_item.sizeObligation)|amount_format }}</span>
                            </div>
                            <div class="col-12">
                                <span class="color-1">{{ _("Валюта: ") }}</span>
                                <span>{{ display_val(data_item.currency) }}</span>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="row mb-2 mr-1">
                            {# todo: not sure #}
                            {{ display_val(data_item.guarantor) }}
                        </div>
                        <div class="row mb-2 mr-1">
                            {# todo: not sure #}
                            {{ display_val(data_item.guarantor_realty) }}
                        </div>
                    </td>
                    <td>
                        {% include 'steps/_care.jinja' with context %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    {{ _("У суб'єкта декларування чи членів його сім'ї відсутні об'єкти для декларування в цьому розділі.") }}
{% endif %}