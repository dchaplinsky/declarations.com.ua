{% for guarantor_id in data_item.guarantor %}
    {% set guarantor = data_item.guarantor[guarantor_id] %}
    <div class="row mb-2 mr-1">
        {% if guarantor.guarantor == "j" %}
            {% if guarantor.guarantor_type == 'Громадянин України' %}
                <div class="row mb-2 mr-1">
                    <div class="col-12">
                        <span class="color-1">{{ _( 'Поручитель: ' ) }}</span>
                        <span>{{ guarantor.guarantor_type }}</span>
                    </div>
                    <div class="col-12">
                        <span class="color-1">{{ _("Прізвище: ") }}</span>
                        <span>{{ display_val(guarantor.guarantor_ua_lastname) }}</span>
                    </div>
                    <div class="col-12">
                        <span class="color-1">{{ _("Ім'я: ") }}</span>
                        <span>{{ display_val(guarantor.guarantor_ua_firstname) }}</span>
                    </div>
                    <div class="col-12">
                        <span class="color-1">{{ _("По батькові: ") }}</span>
                        <span>{{ display_val(guarantor.guarantor_ua_middlename) }}</span>
                    </div>
                    <div class="col-12">
                        <span class="color-1">{{ _("Дата народження: ") }}</span>
                        <span>{{ display_val(guarantor.guarantor_ua_birthday) }}</span>
                    </div>
                    <div class="col-12">
                        <span class="color-1">{{ _("Податковий номер: ") }}</span>
                        <span>{{ display_val(guarantor.guarantor_ua_taxNumber) }}</span>
                    </div>
                    <div class="col-12">
                        <span class="color-1">{{ _("Зареєстроване місце проживання: ") }}</span>
                        <span>{{ display_val(guarantor.guarantor_ua_regAddress) }}</span>
                    </div>
                    {% if guarantor.guarantor_ua_actualAddress  %}
                        <div class="col-12">
                            <span class="color-1">{{ _("Місце фактичного проживання: ") }}</span>
                            <span>{{ display_val(guarantor.guarantor_ua_actualAddress) }}</span>
                        </div>
                    {% endif %}
                    {% if guarantor.guarantor_ua_sameRegLivingAddress|string == "1" %}
                        <div class="col-12">
                            <span class="color-1">{{ _("Місце фактичного проживання: ") }} </span>
                            <span>{{ _("збігається з зареєстрованим місцем проживання") }}</span>
                        </div>
                    {% endif %}
                </div>
            {% elif guarantor.guarantor_type == 'Іноземний громадянин' %}
                <div class="row mb-2 mr-1">
                    <div class="col-12">
                        <span class="color-1">{{ _( 'Поручитель: ' ) }}</span>
                        <span>{{ guarantor.guarantor_type }}</span>
                    </div>

                    <div class="col-12">
                        <span class="color-1">{{ _("Повне ім'я (англійською): ") }}</span>
                        <span>{{ display_val(guarantor.guarantor_eng_fullname) }}</span>
                    </div>
                    <div class="col-12">
                        <span class="color-1">{{ _("Повне ім'я (українською): ") }}</span>
                        <span>{{ display_val(guarantor.guarantor_ukr_fullname) }}</span>
                    </div>
                    <div class="col-12">
                        <span class="color-1">{{ _("Ідентифікаційний номер: ") }}</span>
                        <span>{{ display_val(guarantor.guarantor_eng_taxNumber) }}</span>
                    </div>
                    <div class="col-12">
                        <span class="color-1">{{ _("Місце проживання (англійською): ") }}</span>
                        <span>{{ display_val(guarantor.guarantor_eng_regAddress) }}</span>
                    </div>
                    <div class="col-12">
                        <span class="color-1">{{ _("Місце проживання (українською): ") }}</span>
                        <span>{{ display_val(guarantor.guarantor_ukr_regAddress) }}</span>
                    </div>
                </div>
            {% elif guarantor.guarantor_type == 'Юридична особа, зареєстрована в Україні' %}
                <div class="row mb-2 mr-1">
                    <div class="col-12">
                        <span class="color-1">{{ _( 'Поручитель: ' ) }}</span>
                        <span>{{ display_val(guarantor.guarantor_type) }}</span>
                    </div>
                    <div class="col-12">
                        <span class="color-1">{{ _("Найменування: ") }}</span>
                        <span>{{ display_val(guarantor.guarantor_ua_company_name) }}</span>
                    </div>
                    <div class="col-12">
                        <span class="color-1">{{ _("Код в Єдиному державному реєстрі юридичних осіб, фізичних осіб – підприємців та громадських формувань: ") }}</span>
                        <span>{{ display_val(guarantor.guarantor_ua_company_code) }}</span>
                    </div>
                </div>
            {% elif guarantor.guarantor_type == 'Юридична особа, зареєстрована за кордоном' %}
                <div class="row mb-2 mr-1">
                    <div class="col-12">
                        <span class="color-1">{{ _( 'Поручитель: ' ) }}</span>
                        <span>{{ display_val(guarantor.guarantor_type) }}</span>
                    </div>

                    <div class="col-12">
                        <span class="color-1">{{ _("Найменування (англійською): ") }}</span>
                        <span>{{ display_val(guarantor.guarantor_eng_company_name) }}</span>
                    </div>

                    <div class="col-12">
                        <span class="color-1">{{ _("Найменування (українською): ") }}</span>
                        <span>{{ display_val(guarantor.guarantor_ukr_company_name) }}</span>
                    </div>

                    <div class="col-12">
                        <span class="color-1">{{ _("Ідентифікаційний код: ") }}</span>
                        <span>{{ display_val(guarantor.guarantor_eng_company_code) }}</span>
                    </div>

                    <div class="col-12">
                        <span class="color-1">{{ _("Місцезнаходження (англійською) ") }}</span>
                        <span>{{ display_val(guarantor.guarantor_eng_company_address) }}</span>
                    </div>
                    <div class="col-12">
                        <span class="color-1">{{ _("Місцезнаходження (українською) ") }}</span>
                        <span>{{ display_val(guarantor.guarantor_ukr_company_address) }}</span>
                    </div>
                </div>
            {% endif %}
        {% endif %}
    </div>
{% endfor %}
