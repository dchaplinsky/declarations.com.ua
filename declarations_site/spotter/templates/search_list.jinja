{% extends "base.jinja" %}

{% from "_spotter.jinja" import flash_messages, subscribe_chatbot_links %}

{% block html_title -%}{{ _("Мої запити") }}{%- endblock %}


{% block content %}
<section id="page">
    <div class="container">
        <div id="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href="/">{{ _("Головна") }}</a></li>
                <li class="active">{{ _("Мої запити") }}</li>
            </ol>
        </div>
        {{ flash_messages(messages) }}
        <h1 id="page-header"><span>{{ _("Мої запити") }}</span></h1>

        <div id="add-search" class="text-right">
            <a id="add-one" class="btn btn-raised btn-sm" data-toggle="modal" data-target="#add-one-modal"
                href="#"><span class="glyphicon glyphicon-plus"></span> {{ _("Додати один запит") }}</a>
            {% if request.user.email %}
            <a id="add-multi" class="btn btn-raised btn-sm" data-toggle="modal" data-target="#add-multi-modal"
                href="#" data-href={{ url('save_search') }}><span class="glyphicon glyphicon-plus"></span>
                <span class="glyphicon glyphicon-plus"></span> {{ _("Додати багато запитів") }}</a>
            {% endif %}
        </div>

        <div class="page-content spotter-page">
            <div class="box">
                <div class="table-responsive">
                    <div id="glossarium">
                        <table class="table table-bordered table-striped" id="search-list">
                            <thead>
                                <tr>
                                    <th>{{ _("Запит") }}</th>
                                    <th>{{ _("Знайдено") }}</th>
                                    <th>{{ ("За тиждень") }}</th>
                                    <th>{{ _("Сповіщення на") }}</th>
                                    <th>{{ _("Статус") }}</th>
                                    <th>{{ _("Операції") }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for task in task_list %}
                                <tr>
                                    <td>
                                        <a href="{{ url('search') }}?q={{ task.query }}{%
                                                if task.deepsearch %}&deepsearch=on{% endif %}{%
                                                if task.query_params %}&{{ task.query_params }}{% endif %}"
                                                title="{{ _("Перейти до пошуку") }}">
                                            {{ task.query_title }}
                                        </a>
                                    </td>
                                    <td>{{ task.found_total }}</td>
                                    <td>{{ task.found_week }}</td>
                                    <td>{% if task.is_enabled %}
                                        {% if task.is_allowed_edit_email %}
                                        <a href="{{ url('edit_email') }}">{{ task.user.email }}</a>
                                        {% else %}{{ task.display_email }}{% endif %}{% else %}-{% endif %}
                                    </td>
                                    <td>{% if task.is_enabled %}{{ _("В роботі") }}{% else %}{{ _("На паузі") }}{% endif %}</td>
                                    <td>
                                        <form method="POST" action="{{ url('edit_search', task.id )}}">
                                            {% csrf_token %}
                                            {% if task.is_enabled %}
                                            <button class="btn btn-link" type="submit" name="action"
                                                value="disable">{{ _("Призупинити") }}</button>
                                            {% else %}
                                            <button class="btn btn-link" type="submit" name="action"
                                                value="enable">{{ _("Відновити") }}</button>
                                            {% endif %} |
                                            <button  class="btn btn-link delete" type="submit"
                                                name="action" value="delete">{{ _("Видалити") }}</button>
                                        </form>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="6" class="text-center">
                                        {{ _("Тут пусто, спробуйте створити перше завдання.") }}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <p class="text-center help-footer">
                {{ _('Щоб створити нове завдання спробуйте щось знайти, а потім нажміть "Моніторити цей запит".') }}
                <br><br>
                {{ subscribe_chatbot_links() }}
            </p>
        </div>
    </div>
</section>

<div class="modal fade add-dialog" id="add-one-modal" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">{{ _("Додати запити") }}</h4>
      </div>
      <div class="modal-body">
        <p>{{ _("Щоб поставити запит на моніторинг:") }}</p>
        <ol>
            <li>{{ _("Введіть запит в пошуковий рядок що знаходиться зверху сторніки;") }}</li>
            <li>{{ _("Спробуйте щось знайти, при необхідності уточніть запит;") }}</li>
            <li>{{ _('В результатах пошуку нажміть кнопку "Моніторити цей запит".') }}</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="modal fade add-dialog" id="add-multi-modal" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">{{ _("Додати запити") }}</h4>
      </div>
      <div class="modal-body">
        <div class="add-form">
            <p>{{ _("Впишіть запити які бажаєте моніторити по одному на рядок:") }}</p>
            <textarea id="queries"></textarea>
            <span class="text-danger" id="queries-error"></span>
        </div>
        <div class="add-progress">
            <div>{{ _("Додаю...") }}</div>
            <div class="progress">
              <div class="progress-bar" role="progressbar" aria-valuenow="0"
                    aria-valuemin="0" aria-valuemax="100" style="">
                <span class="sr-only"></span>
              </div>
            </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-raised" id="add-multi-btn">{{ _("Додати") }}</button>
        <button type="button" class="btn btn-default btn-raised" data-dismiss="modal">{{ _("Відмінити") }}</button>
      </div>
    </div>
  </div>
</div>

<div class="modal" id="wait-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-body text-center">
                <h2>{{ _("Зачекайте...") }}</h2>
            </div>
        </div>
    </div>
</div>

{% endblock %}
