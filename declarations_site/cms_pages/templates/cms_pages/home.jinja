{% extends "base.jinja" %}

{% block newslist %}
    {% if latest_news %}
    <section id="newslist" class="on-white">
        <div class="container">            
            <div class="row">
                <h3 class="text-center">Новини декларацій</h3>

                <div id="bihus-news"></div>

            </div>
        </div>
    </section>
    {% endif %}
{% endblock %}

{% block bodyclass %}front{% endblock %}
    {% block infobox %}
    <section id="infobox">
        <div class="container">
            <div class="row">
                <div class="col{% if hp_news %} col-md-4{% else %} big-about{% endif %}">
                    <p class="mb10">
                        <a class="mediaimage" href="{{ slugurl("about") }}">
                            <img alt="" src="{{ static("images/anonim.png") }}" class="img-circle" />
                        </a> <i>{{ page.body|richtext }}</i>
                    </p>
                    <a href="{{ slugurl("about") }}" class="classic green">Дізнатися детально про проект</a>
                </div>
                {% if hp_news %}
                <div id="top-news">
                    {% if hp_news.image %}
                    <div class="col col-md-4">
                        <a href="{{ hp_news.url }}" class="block">
                            {{ image(hp_news.image, "fill-390x220", class="img-responsive") }}
                        </a>
                    </div>
                    {% endif %}
                    <div class="col{% if hp_news.image %} col-md-4{% else %} col-md-8{% endif %}">
                        <span class="topMarker">ТОП-новина:</span>
                        <a href="{{ hp_news.url }}" class="block nd">
                            <h3 class="text-left">{{ hp_news.title }}</h3>
                        </a>
                        <p class="text-left">{{ hp_news.lead|richtext }} <a href="{{ hp_news.url }}" class="block">Детальніше…</a></p>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </section>
{% endblock %}

{% block social %}
{% endblock %}

{% block content %}
    <div class="cp"></div>
    <!-- clear padding -->
{% endblock %}
