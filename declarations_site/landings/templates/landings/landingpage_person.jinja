{% from "_search_results.jinja" import search_results with context %}
{% extends "base.jinja" %}

{% block bodyclass %}landing-page__person{% endblock %}

{% block extra_js %}
    {% javascript 'js_charts' %}
{% endblock %}

{% macro format_trend(prev_val, val, symbol) %}
    {% if prev_val %}
        {% if prev_val > val %}
            <span class="trend--minus" title="{{ _("Попередній період: ")}} {{ symbol }} {{ prev_val|string|curformat() }}">{{ '{0:0.2f}'.format((prev_val - val) / (prev_val) * 100) }}%&darr;</span>
        {% elif prev_val < val %}
            <span class="trend--plus" title="{{ _("Попередній період: ")}} {{ symbol }} {{ prev_val|string|curformat() }}">{{ '{0:0.2f}'.format((val - prev_val) / (prev_val) * 100) }}%&uarr;</span>
        {% else %}
            <span class="trend--no_change"></span>
        {% endif %}
    {% else %}
        {% if val %}
            <span class="trend--plus">+++</span>
        {% else %}
            <span class="trend--no_change"></span>
        {% endif %}
    {% endif %}
{% endmacro %}

{% block content %}
    <div class="content container">
        <div class="person-brief landing-page__person-brief">
            <div class="person-brief__text">
                <h2 class="person-brief__name">
                    {{ person.name }}, {{ person.body.title }}
                </h2>
                <a href="{{ person.body.get_absolute_url() }}">ВЗАД</a>
                {% if summary.documents %}
                <div class="person-brief__position">
                    {% for y in summary.documents.keys()|sort %}
                    <strong>{{ y }}</strong> {{ summary.documents[y]["infocard"]["position"] }} {{ _("в") }}
                    {{ summary.documents[y]["infocard"]["office"] }} 
                    {% endfor %}
                </div>
                <div class="person-brief__actuality landing-page__actuality">
                    {{ _("Актуально на ") }} 
                    {{ summary.documents[summary.max_year]["infocard"]["created_date"]|date }}
                </div>
                {% endif %}
            </div>
        </div>

        <div class="tabs landing-page__tabs">
            <div class="tabs__item">
                <a href="#incomes" class="tabs__link tabs__link--active">
                    {{ _("Графіки") }}
                </a>
            </div>
            <div class="tabs__item">
                <a href="#connections" class="tabs__link">
                    {{ _("Зв’язки") }}
                </a>
            </div>
            <div class="tabs__item">
                <a href="#docs" class="tabs__link">
                    {{ _("Список документів") }}
                </a>
            </div>
        </div>

        <div class="search-card search-page__result-card tabs__tab" id="incomes">
            <div class="search-card__top">
                <h2 class="search-card__title">
                    {{ _("Статки") }}
                </h2>
                <div class="search-card__col">
                    <div class="search-card__col-title">
                        {{ _("Всього статків") }}
                    </div>
                    <div class="search-card__col-value">
                        $25 184.15
                    </div>
                </div>
                <div class="search-card__col">
                    <div class="search-card__col-title">
                        {{ _("Дохідність") }}
                    </div>
                    <div class="search-card__col-value">
                        +$25 184.15
                    </div>
                </div>
                <div class="search-card__col">
                    <div class="landing-page__actuality">
                        {{ _("Актуально на") }} 03.04.2020
                    </div>
                </div>

                <div id="incomes"
                    data-format="money"
                    data-labels="{{ summary.documents.keys()|list|tojson }}"
                    data-family_values="{{ summary.documents.values()|extract('incomes.family')|tojson }}"
                    data-declarant_values="{{ summary.documents.values()|extract('incomes.declarant')|tojson }}"
                    data-family_label="{{ _("Родина") }}"
                    data-declarant_label="{{ _("Декларант") }}">
                </div>

                <div id="assets"
                    data-format="money"
                    data-labels="{{ summary.documents.keys()|list|tojson }}"
                    data-family_values="{{ summary.documents.values()|extract('assets.family')|tojson }}"
                    data-declarant_values="{{ summary.documents.values()|extract('assets.declarant')|tojson }}"
                    data-family_label="{{ _("Родина") }}"
                    data-declarant_label="{{ _("Декларант") }}">
                </div>

                <div id="estate"
                    data-format="area"
                    data-labels="{{ summary.documents.keys()|list|tojson }}"
                    data-family_values="{{ summary.documents.values()|extract('estate.family_other')|tojson }}"
                    data-declarant_values="{{ summary.documents.values()|extract('estate.total_other')|tojson }}"
                    data-family_label="{{ _("Родина") }}"
                    data-declarant_label="{{ _("Декларант") }}">
                </div>

                <div id="land"
                    data-format="area"
                    data-labels="{{ summary.documents.keys()|list|tojson }}"
                    data-family_values="{{ summary.documents.values()|extract('estate.family_land')|tojson }}"
                    data-declarant_values="{{ summary.documents.values()|extract('estate.total_land')|tojson }}"
                    data-family_label="{{ _("Родина") }}"
                    data-declarant_label="{{ _("Декларант") }}">
                </div>

                <div id="liabilities"
                    data-format="money"
                    data-labels="{{ summary.documents.keys()|list|tojson }}"
                    data-declarant_values="{{ summary.documents.values()|extract('liabilities.total')|tojson }}"
                    data-declarant_label="{{ _("Декларант") }}">
                </div>

                <div id="expenses"
                    data-format="money"
                    data-labels="{{ summary.documents.keys()|list|tojson }}"
                    data-declarant_values="{{ summary.documents.values()|extract('expenses.total')|tojson }}"
                    data-declarant_label="{{ _("Декларант") }}">
                </div>
            </div>

            <div class="search-card__items">
                <div class="search-card__item">
                    <canvas id="person"/>
                </div>
            </div>
        </div>
        
        <div class="search-card tabs__tab" id="connections" style="display: none">
            <canvas />
        </div>

        <div class="tabs__tab" id="docs" style="display: none">
            <form action="{{ url("compare") }}" method="GET">
                {% for d in declarations %}
                <input type="hidden" name="declaration_id[]" value="{{ d }}" />
                {% endfor %}
                <input type="submit" value="ПОРІВНЯТИ" />
            </form>
            {{ search_results(results, true) }}
        </div>
    </div>
{% endblock %}